{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "recommendation_request.json",
  "title": "RecommendationRequest",
  "type": "object",
  "properties": {
    "userId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "scene": {
      "type": "string",
      "enum": ["home", "detail", "cart", "profile", "search"]
    },
    "size": {
      "type": "integer",
      "minimum": 1,
      "maximum": 50,
      "default": 10
    },
    "requestId": {
      "type": "string"
    }
  },
  "required": ["userId", "scene"],
  "additionalProperties": false
}
